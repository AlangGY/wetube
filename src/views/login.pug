extends layouts/main.pug

block content
    .form-container 

        form(action=routes.login , method="post")
            span.form_title #{siteName}
            span.form_description 로그인
            .form_block
                .email
                    label(for="email") 이메일
                    input(type="email", id="email" name="email", placeholder="Email",required=true)
                .password
                    label(for="password") 비밀번호
                    input(type="password", id="password" name="password", placeholder="Password",required=true)
                input(type="submit", value="Log In",required=true)
        include partials/socialLogin
        